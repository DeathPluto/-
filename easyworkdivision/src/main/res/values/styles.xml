<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="LoginFuncLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">80</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="LoginFuncImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">8</item>
    </style>

    <style name="LoginLabel">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/smallest_textsize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LoginUserAreaTextView">
        <item name="android:layout_weight">140</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/c_F0FADA</item>
    </style>

    <style name="LoginUserAreaEditText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">310</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <style name="LoginFindPwdButton">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">140</item>
        <item name="android:textColor">@color/c_F0FADA</item>
    </style>

    <style name="LoginSubmitButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">310</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/c_F0FADA</item>
    </style>

    <style name="MainRadioButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/small_textsize</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">110</item>
    </style>

    <style name="ContactUsTextView">
        <item name="android:textSize">@dimen/normal_textsize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="MoreTextView">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawableRight">@drawable/icon_more_arrow_right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">60</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ProjectInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">50</item>
    </style>

    <style name="ProjectInfoItem.LinearLayout">
        <item name="android:weightSum">17</item>
        <item name="android:background">@color/c_F0FADA</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/activity_padding</item>
        <item name="android:paddingRight">@dimen/activity_padding</item>
    </style>

    <style name="ProjectInfoTextView">
        <item name="android:textSize">@dimen/smaller_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ProjectInfoTextView.Holder">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ProjectInfoTextView.Label">
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="ProjectInfoTextView.Content">
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">@color/c_3333cc</item>
        <item name="android:layout_weight">12</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="LinkButton">
        <item name="android:layout_weight">50</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:background">@color/c_8FC400</item>
    </style>

</resources>

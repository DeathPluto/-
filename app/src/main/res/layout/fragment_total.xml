<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_previous"
            android:text="前月"
            style="@style/TotalItem.Button" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_centerHorizontal="true"
            android:text="2011/6"
            android:textSize="28sp"
            android:textStyle="bold"
            style="@style/TotalItem.TextView" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_next"
            android:text="次月"
            android:layout_alignParentRight="true"
            style="@style/TotalItem.Button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_total_item_round_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:text="上班天数"
            style="@style/TotalItem.TextView" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_alignParentRight="true"
            android:text="4天"
            style="@style/TotalItem.TextView" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_total_item_top_half_round_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:text="上班时间(合计)"
            style="@style/TotalItem.TextView" />

        <TextView
            android:id="@+id/tv_time_total"
            android:layout_alignParentRight="true"
            android:text="64:54"
            style="@style/TotalItem.TextView" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/bg_total_item_bottom_half_round_corner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="10dp"
            android:text="上班时间(平均)"
            style="@style/TotalItem.TextView" />

        <TextView
            android:id="@+id/tv_time_average"
            android:layout_alignParentRight="true"
            android:text="16:14"
            style="@style/TotalItem.TextView" />
    </RelativeLayout>

    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/btn_search"
        android:text="开始搜索"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        android:clickable="true"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="42dp" />

    <LinearLayout
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_start"
            android:padding="6dp"
            android:background="@drawable/bg_total_item_round_corner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="起始时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_start_date"
                android:text="2015/5"
                android:textColor="#ccc"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_gravity="center_vertical"
            android:text="~"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_end"
            android:padding="6dp"
            android:background="@drawable/bg_total_item_round_corner"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="截止时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_end_date"
                android:text="2015/8"
                android:textColor="#ccc"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>